<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:PhotoAlbum.Controls">

    <Style TargetType="controls:ScatterView">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="controls:ScatterView">

                    <Canvas  x:Name="PART_ROOT" Background="{TemplateBinding Background}">

                        <ItemsPresenter />

                    </Canvas>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

        <Setter Property="ItemsPanel">
            <Setter.Value>
                <ItemsPanelTemplate>
                    <Canvas x:Name="PART_PANEL"/>
                </ItemsPanelTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
