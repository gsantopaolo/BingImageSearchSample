<UserControl
    x:Class="PhotoAlbum.Views.TeamItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PhotoAlbum.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
     xmlns:vm="using:PhotoAlbum.ViewModels"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    <!--<UserControl.DataContext>
        <vm:TeamItemViewModel/>
    </UserControl.DataContext>-->
    <Grid x:Name="layoutGrid" Width="300" Height="300" Background="Green">
        <TextBlock Text="{Binding BingImage.Title}" Margin="10"/>
        <Viewbox x:Name="MyImage" Width="{Binding ActualWidth, ElementName=layoutGrid, Mode=OneWay}" Height="{Binding ActualHeight, ElementName=layoutGrid, Mode=OneWay}">
            <Image Source="{Binding Image}" />
        </Viewbox>
        <ProgressRing x:Name="progressRing" Width="50"
                      Height="50" HorizontalAlignment="Center"
                      VerticalAlignment="Center" Foreground="{StaticResource ExtendedSplashForeground}"
                      IsActive="{Binding IsLoading}" >
        </ProgressRing>
    </Grid>
</UserControl>
